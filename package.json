{
  "name": "morpho-blue-liquidation-bot",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "pnpm --filter '@morpho-blue-liquidation-bot/*' lint",
    "prepare": "husky",
    "test:liquidity-venues": "pnpm build:config && vitest liquidityVenues",
    "test:pricers": "pnpm build:config && vitest pricers",
    "test:execution": "pnpm build:config &&vitest execution",
    "build:config": "pnpm --filter @morpho-blue-liquidation-bot/config build",
    "deploy:executor": "pnpm build:config && tsx apps/client/src/deployExecutor.ts",
    "liquidate": "pnpm build:config && tsx apps/client/src/script.ts --env-file=.env",
    "skim": "pnpm build:config && tsx apps/client/src/skim.ts --env-file=.env"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@morpho-org/blue-sdk": "^3.0.9",
    "ponder": "^0.13.6",
    "tsx": "^4.19.3",
    "viem": "^2.37.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^20.9.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "3.5.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.9"
  },
  "engines": {
    "node": ">=18.14"
  },
  "pnpm": {
    "packageExtensions": {
      "@uniswap/v4-sdk@*": {
        "dependencies": {
          "ethers": "5.7.2"
        }
      }
    }
  },
  "workspaces": [
    "apps/*"
  ],
  "packageManager": "pnpm@9.13.2+sha1.969cc200a41db98449afee1bfa7578b3ce6ff330"
}
